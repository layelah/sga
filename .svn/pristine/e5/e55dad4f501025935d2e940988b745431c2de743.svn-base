<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:composite="http://java.sun.com/jsf/composite"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core">

    <composite:interface>
        <composite:attribute name="titre" required="true"/>
        <composite:attribute name="code" required="true"/>
        <composite:attribute name="obj" required="true"/>
        <composite:attribute name="optionnel" default="false"/>
    </composite:interface>

    <composite:implementation>
        <h:panelGrid columns="4">
            <h:outputLabel value="#{cc.attrs.titre} : " for="#{cc.attrs.code}" styleClass="formOutput" />
            <h:inputText id="#{cc.attrs.code}" size="5" maxlength="5" value="#{cc.attrs.obj}" required="#{not cc.attrs.optionnel}"  converterMessage="#{msg.GEN_ERR_VALEUR_TYPE}"  requiredMessage="#{msg.GEN_ERR_VALEUR_OBLIGATOIRE}">
                    <f:converter converterId="heureConvert" />
            </h:inputText>
            <h:outputLabel rendered="#{not cc.attrs.optionnel}" value=" * " style="color: red"/><h:message for="#{cc.attrs.code}" errorStyle="color: red" />
        </h:panelGrid>
    </composite:implementation>
</html>