<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:c="http://java.sun.com/jsp/jstl/core"	
      xmlns:composite="http://java.sun.com/jsf/composite"
      xmlns:b="http://bootsfaces.net/ui">

    <composite:interface>
        <composite:attribute name="bean" required="true"/>
        <composite:attribute name="retour" default="NONE"/>
        <composite:attribute name="hide_modifier" type="java.lang.Boolean" default="false"/>
        <composite:attribute name="hide_supprimer" type="java.lang.Boolean" default="false"/>
        <composite:attribute name="hide_fermer" type="java.lang.Boolean" default="false"/>
    </composite:interface>

    <composite:implementation>
        <b:commandButton look="primary" type="submit"  rendered="#{not cc.attrs.hide_modifier}" value="#{msg.BNT_MODIFIER}" action="#{cc.attrs.bean.goModif()}" style="width: 200px;background-color: #31708F;color: #ffffff;font-weight: bold;margin: 2px;margin-left: 23%;"/>
        <b:button value="SUPPRIMER" look="primary" rendered="#{not cc.attrs.hide_supprimer}"  onclick="$('.modalPseudoClass').modal();return false;" style="width: 200px;margin: 1px;background: #e33b06;color: #ffffff;font-weight: bold;margin-left: 1%;"/>
        <c:choose>
            <c:when test="${cc.attrs.retour eq 'NONE'}">
                <b:commandButton look="primary" type="submit" rendered="#{not cc.attrs.hide_fermer}" immediate="true" value="#{msg.BNT_FERMER}" action="#{cc.attrs.bean.goBack()}" style="width: 200px;margin: 2px;background: #ac0000;color: #ffffff;font-weight: bold;"/>
            </c:when>
            <c:otherwise>
                <b:commandButton type="submit" rendered="#{not cc.attrs.hide_fermer}" immediate="true" value="#{msg.BNT_FERMER}" action="#{cc.attrs.retour}" style="width: 200px;margin: 2px;background: #e33b06;color: #ffffff;font-weight: bold;"/>
            </c:otherwise>
        </c:choose>
    </composite:implementation>
</html>
